{% extends 'base.html.twig' %}

{% block title %}Progica{% endblock %}

{% block body %}

	<div class="col-md-12">
		<div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
			<div class="col p-4 d-flex flex-column position-static">
				<strong class="d-inline-block mb-2 text-success">{{gite.city.name}}</strong>
				<h3 class="mb-0">{{gite.title}}</h3>
				<p>{{gite.price}}€ / jour</p>
				<p>Ce gîte dispose de {{gite.room}}
					chambre(s) et de {{gite.bed}}
					lit(s).</p>
				<p>Description : {{gite.description}}</p>
				<p>Contact : {{user.firstName}} {{user.lastName}}</p>
				<p>Numéro de contact : {{user.phone}}</p>
				<p>Animaux autorisés : {{answer}}</p>
			</div>
			<div class="col-auto d-none d-lg-block">
				<img src="{{gite.image}}" alt="" style="width:200px; height:250px">
			</div>
		</div>
	</div>
{% endblock %}
